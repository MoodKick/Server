<div class="page-header">
  <h2>User</h2>
</div>

<dl class="dl-horizontal">
  <dt>Avatar</dt>
  <dd><%= image_tag(avatar_url(user.avatar_url)) %></dd>
  <dt>Username</dt>
  <dd><%= user.username %></dd>
  <dt>Email</dt>
  <dd><%= user.email %></dd>
  <dt>Full name</dt>
  <dd><%= user.full_name %></dd>
  <dt>Location</dt>
  <dd><%= user.location %></dd>
  <dt>Roles</dt>
  <dd><%= user_roles(user.roles) %></dd>
  <dt>Description</dt>
  <dd><%= user.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Edit', edit_backend_admin_user_path(user), class: 'btn' %>
  <% if user.has_role?(Role::Therapist) %>
    <%= link_to 'Associate client', new_backend_admin_therapist_client_path(user), class: 'btn' %>
  <% end %>
  <%= link_to 'Edit roles', backend_admin_user_roles_path(user), class: 'btn' %>
  <%= link_to 'Delete', backend_admin_user_path(user),
              method: 'delete',
              confirm: 'Are you sure?',
              class: 'btn btn-danger' %>
</div>
