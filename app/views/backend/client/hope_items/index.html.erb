<section class="chest-of-hope">
  <div class="page-header">
    <h2>Chest of hope</h2>
  </div>

  <table class="table table-stripped">
    <thead>
      <th>Title</th>
      <th>Type</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <% hope_items.each do |hope_item| %>
        <tr>
          <td><%= hope_item.title %></td>
          <td><%= hope_item.type %></td>
          <td>
            <%= link_to 'Edit', edit_backend_client_hope_item_path(hope_item),
                class: 'btn btn-mini' %>
            <%= link_to 'Destroy', backend_client_hope_item_path(hope_item),
                method: :delete, confirm: 'Are you sure?',
                class: 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="form-actions">
    <%= link_to 'Add text', new_text_backend_client_hope_items_path, class: 'btn' %>
  </div>
</section>
